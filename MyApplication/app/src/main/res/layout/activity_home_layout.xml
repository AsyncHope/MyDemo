<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.anysoft.demo.widget.NoScrollViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></com.anysoft.demo.widget.NoScrollViewPager>

    <com.anysoft.demo.widget.BottomNavigationViewEx
        android:id="@+id/home_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="99px"
        app:elevation="20dp"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:menu="@menu/bottom_navigation_main">

    </com.anysoft.demo.widget.BottomNavigationViewEx>
</LinearLayout>